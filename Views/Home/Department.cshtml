@model IEnumerable<DemoApp1.Models.DepartmentInfo>

<html>
    <head>
        <title>Department</title>
    </head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: rgb(204, 0, 197);
            font-size: 24px;
        }

    
        table {
            border-collapse: collapse;
            width: 80%;
            margin: 20px auto;
        }

        th, td {
            border: 2px solid #070606;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #bf80ff;
            color: #fff;
        }
@* 
        tr:nth-child(even) {
            background-color: #bf80ff;
        } *@

        tr:hover {
            background-color: rgb(212, 148, 237);
            @* transition: background-color 0.3s ease; *@
        }

        p {
            text-align: center;
        }

        .button {
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            background: linear-gradient(45deg, #8967d9, #9f64b9);
            color: #fff;
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .button:hover {
            background: linear-gradient(45deg, #cc0074, #6600ff);
            transform: scale(1.05);
        }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .button-container button {
            border: none; /* Remove border */
        }

        .button-container button:hover {
             background: linear-gradient(45deg, #cc0074, #6600ff);
            transform: scale(1.05);
            color: #efeaea;
        }
    </style>
    <body>
    <h1>Our Department</h1>
    <table border="2">
        <tr>
            <th>Department No</th>
            <th>Department Name</th>
            <th>Location</th>
        </tr>
         @foreach(var entry in Model)
        {
            <tr>
                <td>@entry.DEPTNO</td>
                <td>@entry.DNAME</td>
                <td>@entry.LOC</td>
            </tr>
            }
    </table>
  <div class="button-container">
      <a href="/Home/DeptRegister"class="button">Register New Department</a></button>
      <a href="/Home/RemoveDept"  class="button">Remove Department</a></button>
      <a href="Index">
   <button type="submit" class="button">Log Out</button>
  </div>
  
    </body>
</html>


